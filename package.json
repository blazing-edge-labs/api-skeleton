  "devDependencies": {
    "eslint": "^5.7.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "nodemon": "^1.18.4",
    "supertest": "^3.3.0",
    "tap-spec": "^5.0.0",
    "tape": "^4.7.0"
  },
  "engines": {
    "node": "8",
    "yarn": "1"
  },
  "scripts": {
    "ci": "run-s -s lint:check db:recreate db:seed test",
    "db:recreate": "run-s -s \"migrate recreate\"",
    "db:seed": "run-s -s \"migrate seed\"",
    "dev": "run-p -s dev:server",
    "dev:server": "nodemon -q -I -e js,json -i package.json -- -r babel-register index.js",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "migrate": "node -r babel-register -r ./env migrate",
    "start": "node -r babel-register index.js",
    "test": "tape -r babel-register -r ./env **/*.test.js | tap-spec"
  }
}
